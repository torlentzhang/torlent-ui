{
  "compilerOptions": {
    "target": "ESNext", // 目标语言版本
    "module": "ESNext", // 模块系统
    "moduleResolution": "bundler", // 模块解析策略
    "resolveJsonModule": true, // 允许导入 JSON 模块
    "allowSyntheticDefaultImports": true, // 允许合成默认导入
    "esModuleInterop": true, // 允许模块与 CommonJS 模块交互
    "forceConsistentCasingInFileNames": true, // 强制文件名大小写一致
    "strict": true, // 开启严格模式
    "noImplicitAny": false, // 不允许隐式的 any 类型
    "skipLibCheck": true, // 跳过库检查
    "lib": ["ESNext", "DOM"], // 包含的库文件
    "types": ["vitepress/client"],
    "paths": {
      "torlent-ui": ["../packages/ui"], // 映射 torlent-ui 到 ../packages/ui
      "~/*": ["./.vitepress/vitepress/*"], // 映射 ~/* 到 ./.vitepress/vitepress/*
      "vue": ["./node_modules/vue"] // 映射 vue 到 ./node_modules/vue
    },
    "jsx": "preserve", // 保留 JSX 语法
    "jsxImportSource": "vue" // 映射 JSX 导入源到 vue
  },
  "include": ["**/*", ".vitepress/**/*", "../typings/global.d.ts"], // 包含的文件
  "exclude": ["node_modules"] // 排除的文件
}
